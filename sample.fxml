<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<HBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox>
        <ListView fx:id = "employeeListView"/>
        <Button text = "Delete" prefWidth = "200" fx:id = "DeleteButton"/>
    </VBox>
    <VBox>
       <HBox>
           <Label text = "First Name" prefWidth = "150"/>
           <TextField prefWidth = "150" fx:id = "firstnameText"/>
       </HBox>
        <HBox>
            <Label text = "Last Name" prefWidth = "150"/>
            <TextField prefWidth = "150" fx:id = "lastnameText"/>
        </HBox>
        <HBox>
            <Label text = "Is active?" prefWidth = "150"/>
            <CheckBox fx:id = "isActive"/>
        </HBox>
        <HBox>
            <Button text = "Clear" prefWidth ="200" fx:id = "ClearButton"></Button>
            <Button text = "Add New" prefWidth = "200" fx:id = "AddButton"/>
        </HBox>
    </VBox>
</HBox>